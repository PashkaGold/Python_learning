class Person:
    def __init__(self, name, age):
        self.name = name
        self.age = age

    def introduce(self):
        print(f"Мене звати {self.name}, мені {self.age} років.")


class Employee(Person):
    def __init__(self, name, age, position):
        super().__init__(name, age)
        self.position = position

    def work(self):
        print(f"{self.name} працює на посаді {self.position}.")


class Student(Person):
    def __init__(self, name, age, student_id):
        super().__init__(name, age)
        self.student_id = student_id

    def study(self):
        print(f"{self.name} навчається зі студентським ID {self.student_id}.")


class University:
    def __init__(self):
        self.employees = []
        self.students = []

    def add_employee(self, employee):
        self.employees.append(employee)

    def add_student(self, student):
        self.students.append(student)

    def remove_employee(self, name):
        for employee in self.employees:
            if employee.name == name:
                self.employees.remove(employee)

    def remove_student(self, student_id):
        for student in self.students:
            if student.student_id == student_id:
                self.students.remove(student)

    def find_person_by_name(self, name):
        for employee in self.employees:
            if employee.name == name:
                return employee
        for student in self.students:
            if student.name == name:
                return student
        return None

    def find_person_by_id(self, student_id):
        for student in self.students:
            if student.student_id == student_id:
                return student
        return None

    def show_info(self):
        print("Працівники:")
        for employee in self.employees:
            employee.introduce()
            employee.work()
        print("\nСтуденти:")
        for student in self.students:
            student.introduce()
            student.study()


# Приклад використання класів
employee1 = Employee("Іван", 30, "інженер")
student1 = Student("Олена", 20, "S12345")
student2 = Student("Петро", 22, "S23456")

university = University()
university.add_employee(employee1)
university.add_student(student1)
university.add_student(student2)

university.show_info()

university.remove_employee("Іван")
university.remove_student("S23456")

print("\nІнформація після видалення працівника та студента:")
university.show_info()

# Пошук за ім'ям або ID
found_person = university.find_person_by_name("Олена")
if found_person:
    print("\nЗнайдена особа за ім'ям:", found_person.name)
else:
    print("\nОсобу не знайдено за ім'ям.")

found_person = university.find_person_by_id("S12345")
if found_person:
    print("Знайдена особа за студентським ID:", found_person.name)
else:
    print("Особу не знайдено за студентським ID.")